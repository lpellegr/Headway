{
  "resources": {
    "body": [
      {
        "type": "script",
        "src": "app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
"options": {
    "properties": {
      "accid": {
        "order": 1,
        "title": "Headway Account ID",
        "description": "Grab this from your settings > widget tab on headwayapp.co.",
        "type": "string",
        "default": "4xWvcy"
      },
      "location": {
        "title": "Location",
        "type": "string",
        "format": "selector",
        "order": 2
      },
      "title": {
              "title": "Changelog Title",
              "default": "[Company Name] Changelog",
              "order": 3,
              "type": "string"
      },
      "labelnew": {
              "title": "Label New",
              "description": "Change the label <span style='color: #5AB987;'>New</span> to something else.",
              "default": "New",
              "order": 4,
              "type": "string"
      },
       "labelimprovement": {
              "title": "Label Improvement",
              "description": "Change the label <span style='color: #8D66B9;'>Improvement</span> to something else.",
              "default": "Improvement",
              "order": 5,
              "type": "string"
      },
       "labelfix": {
              "title": "Label Fix",
              "description": "Change the label <span style='color: #F5A623;'>Fix</span> to something else.",
              "default": "Fix",
              "order": 6,
              "type": "string"
      }
    }
  }
}

